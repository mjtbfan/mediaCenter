{
    "id": "chrome",
    "name": "Google Chrome",
    "className": "ChromeProgram",

    "allowQuickAccess": true,

    "dir": "C:\\Program Files\\Google\\Chrome\\Application\\",
    "exe": "chrome.exe",

    "mouse": {
        "initialPos": [0.5, 0.5],
        "xinput": {
            "x": "LSX",
            "y": "-LSY",
            "vscroll": "-RSY",
            "lclick": "A",
            "rclick": "X",
            "deadzone": 0.15
        }
    },

    "hotkeys": {
        "buttonTime": 0,
        "xinput": {
            "[REPEAT]RSX>0.4": "Send ^=",
            "[REPEAT]RSX<-0.4": "Send ^-",

            "[REPEAT]DU": "Send {Up}",
            "[REPEAT]DD": "Send {Down}",
            "[REPEAT]DL": "Send {Left}",
            "[REPEAT]DR": "Send {Right}",

            "[REPEAT]B": "Send {Backspace}",
            "Y": "Send !{Home}",
            "LB": "Send ^+{Tab}",
            "RB": "Send ^{Tab}",
            "LT>0.75": "Send !{Left}",
            "RT>0.75": "Send !{Right}",

            "SELECT": "toggleKeyboard",
            "START": "Send ^t"
        }
    },

    "pauseOptions": {
        "Toggle Picture-in-Picture": "program.pip"
    },
    "pauseOrder": ["Toggle Picture-in-Picture"]
}