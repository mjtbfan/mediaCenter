{
    "id": "retroarch",
    "name": "RetroArch",
    "className": "RetroArchEmulator",

    "exe": "retroarch.exe",
    "dir": "C:\\Emulators\\RetroArch",

    "requireFullscreen": true,
    "priority": "H",

    "numStates": 1,
    "fastForward": true,
    "rewind": true,
    "reset": true,

    "controls": ["Xbox Controller"],

    "hotkeys": {
        "xinput": {
            "HOME&START": "program.saveState",
            "HOME&SELECT": "program.loadState",
            "HOME&LT>0.3": "program.rewind",
            "HOME&RT>0.3": "program.fastForward"
        }
    },

    "pauseOptions": {
        "Toggle MAME Menu": "program.mameMenu",
        "Toggle Menu": "program.menu"
    },

    "pauseOrder": [
        "Save State", 
        "Load State", 
        "Toggle Menu", 
        "Toggle MAME Menu", 
        "Reset Game"
    ]
}