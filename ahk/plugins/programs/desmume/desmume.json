{
    "id": "desmume",
    "name": "DeSmuME",
    "className": "DeSmuMEEmulator",

    "exe": "DeSmuME-VS2019-x64-Release.exe",
    "dir": "C:\\Emulators\\DeSmuME",

    "requireFullscreen": true,

    "numStates": 1,
    "fastForward": true,
    "reset": true,

    "controls": ["Xbox Controller"],

    "mouse": {
        "initialPos": [0.5, 0.5],
        "xinput": {
            "x": "RSX",
            "y": "-RSY",
            "lclick": "RSB",
            "deadzone": 0.15
        }
    },

    "hotkeys": {
        "buttonTime": 0,
        "xinput": {
            "HOME&START": {
                "down": "program.saveState",
                "time": 70
            },
            "HOME&SELECT": {
                "down": "program.loadState",
                "time": 70
            },
            "HOME&RT>0.3": {
                "down": "program.fastForward",
                "time": 70
            },
    
            ; desmume only supports inputs from 1 source, so use keyboard
            ; used to duplicate functionality for triggers & bumpers
            ; uses basic Send commands so that it isn't buffered
            "A": {
                "down": "Send '{z down}'",
                "up": "Send '{z up}'"
            },
            "B": {
                "down": "Send '{x down}'",
                "up": "Send '{x up}'"
            },
            "X": {
                "down": "Send '{a down}'",
                "up": "Send '{a up}'"
            },
            "Y": {
                "down": "Send '{s down}'",
                "up": "Send '{s up}'"
            },
            "START": {
                "down": "Send '{Enter down}'",
                "up": "Send '{Enter up}'"
            },
            "SELECT": {
                "down": "Send '{RShift down}'",
                "up": "Send '{RShift up}'"
            },
            "LB|LT>0.05": {
                "down": "Send '{q down}'",
                "up": "Send '{q up}'"
            },
            "RB|RT>0.05": {
                "down": "Send '{w down}'",
                "up": "Send '{w up}'"
            },
            "DU|LSY>0.4": {
                "down": "Send '{Up down}'",
                "up": "Send '{Up up}'"
            },
            "DD|LSY<-0.4": {
                "down": "Send '{Down down}'",
                "up": "Send '{Down up}'"
            },
            "DL|LSX<-0.4": {
                "down": "Send '{Left down}'",
                "up": "Send '{Left up}'"
            },
            "DR|LSX>0.4": {
                "down": "Send '{Right down}'",
                "up": "Send '{Right up}'"
            }
        }
    },

    "pauseOptions": {
        "Swap Screens": "program.swapScreens",
        "Change Screen Layout": "program.layoutScreens",
    },

    "pauseOrder": [
        "Save State", 
        "Load State", 
        "Swap Screens", 
        "Change Screen Layout", 
        "Reset Game"
    ]
}