{
    "id": "citra",
    "name": "Citra",
    "className": "CitraEmulator",

    "exe": "citra-qt.exe",
    "dir": "C:\\Emulators\\Citra",

    "requireFullscreen": true,

    "numStates": 1,
    "fastForward": true,
    "reset": true,

    "controls": ["Xbox Controller"],

    "mouse": {
        "initialPos": [0.5, 0.5],
        "xinput": {
            "x": "RSX",
            "y": "-RSY",
            "lclick": "RSB",
            "rclick": "LSB",
            "deadzone": 0.15
        }
    },

    "hotkeys": {
        "buttonTime": 0,
        "xinput": {
            "HOME&START": {
                "down": "program.saveState",
                "time": 70
            },
            "HOME&SELECT": {
                "down": "program.loadState",
                "time": 70
            },
            "HOME&RT>0.3": {
                "down": "program.fastForward",
                "time": 70
            },

            ; used to duplicate functionality for triggers & bumpers
            ; uses basic Send commands so that it isn't buffered
            "LB|LT>0.05": {
                "down": "Send '{q down}'",
                "up": "Send '{q up}'"
            },
            "RB|RT>0.05": {
                "down": "Send '{w down}'",
                "up": "Send '{w up}'"
            }
        }
    },

    "pauseOptions": {
        "Swap Screens": "program.swapScreens",
        "Change Screen Layout": "program.layoutScreens",
    },

    "pauseOrder": [
        "Save State", 
        "Load State", 
        "Swap Screens", 
        "Change Screen Layout", 
        "Reset Game"
    ]
}