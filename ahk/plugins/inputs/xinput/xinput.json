{
    "id": "xinput",
    "name": "Xbox Controller",
    "className": "XInputDevice",

    "maxConnected": 4,
    "vibration": true,

    "buttons": ["A", "B", "X", "Y", "LB", "RB", "SELECT", "START", "LSB", "RSB", "DU", "DD", "DL", "DR", "HOME"],
    "axis": ["LSX", "LSY", "RSX", "RSY", "LT", "RT"],

    "kbmmode": {
        "hotkeys": {
            "7": "toggleKeyboard",
            "[REPEAT]2": "Send {Backspace}"
        },
        "mouse": {
            "x": 1, 
            "y": -2, 
            "lclick": 1,
            "rclick": 3,
            "hscroll": 3,
            "vscroll": -4
        }
    },

    "desktopmode": {
        "hotkeys": {
            "15": "pausemenu",
            "7": "toggleKeyboard",
            "8": "Send {LWin}",

            "[REPEAT]11": "Send {Up}",
            "[REPEAT]12": "Send {Down}",
            "[REPEAT]13": "Send {Left}",
            "[REPEAT]14": "Send {Right}",

            "[REPEAT]2": "Send {Backspace}",

            "5>0.3": "Send !{Tab}",
            "6>0.3": "Send !+{Tab}"
        },
        "mouse": {
            "x": 1, 
            "y": -2, 
            "lclick": 1,
            "rclick": 3,
            "hscroll": 3,
            "vscroll": -4
       }
    },

    "programHotkeys": {
        "default": {
            "15": {
                "down": "pausemenu",
                "time": 80
            },
            "7&8": {
                "down": "program.exit",
                "time": 120
            }
        }
    },

    "interfaceHotkeys": {
        "default": {
            "[REPEAT]11|2>0.4": "gui.up",
            "[REPEAT]12|2<-0.4": "gui.down",
            "[REPEAT]13|1<-0.4": "gui.left",
            "[REPEAT]14|1>0.4": "gui.right",
            "2": "gui.back",
            "1": {
                "down": "gui.select",
                "up": "gui.unselect"
            },
            "15": {
                "down": "pausemenu",
                "time": 80
            }
        },
        "keyboard": {
            "7": "gui.Destroy"
        }
    }
}