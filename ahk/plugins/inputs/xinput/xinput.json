{
    "id": "xinput",
    "name": "Xbox Controller",

    "maxConnected": 4,
    "vibration": true,
    
    "className": "XInputDevice",
    "initialize": "xInitialize",
    "destroy": "xDestroy",

    "kbmmode": {
        "hotkeys": {
            "SELECT": "toggleKeyboard",
            "[REPEAT]B": "Send {Backspace}"
        },
        "mouse": {
            "x": "LSX", 
            "y": "-LSY", 
            "lclick": "A",
            "rclick": "X",
            "hscroll": "RSX",
            "vscroll": "-RSY"
        }
    },

    "desktopmode": {
        "hotkeys": {
            "HOME": "disableDesktopMode",
            "SELECT": "toggleKeyboard",
            "START": "Send {LWin}",

            "[REPEAT]DU": "Send {Up}",
            "[REPEAT]DD": "Send {Down}",
            "[REPEAT]DL": "Send {Left}",
            "[REPEAT]DR": "Send {Right}",

            "[REPEAT]B": "Send {Backspace}",

            "LT>0.3": "Send !{Tab}",
            "RT>0.3": "Send !+{Tab}"
        },
        "mouse": {
            "x": "LSX", 
            "y": "-LSY", 
            "lclick": "A",
            "rclick": "X",
            "hscroll": "RSX",
            "vscroll": "-RSY"
        }
    },

    "programHotkeys": {
        "HOME": {
            "down": "PauseMenu",
            "time": 80
        },
        "START&SELECT": {
            "down": "program.exit",
            "time": 120
        }
    },

    "interfaceHotkeys": {
        "default": {
            "[REPEAT]DU|LSY>0.4": "gui.up",
            "[REPEAT]DD|LSY<-0.4": "gui.down",
            "[REPEAT]DL|LSX<-0.4": "gui.left",
            "[REPEAT]DR|LSX>0.4": "gui.right",
            "A": "gui.select",
        },
        ; FIX THIS GARBAGE
        "AHKGUIINPUT": {
            "B": "gui.Destroy",
            "A": {
                "down": "inputMenuVibrate 1", 
                "up": "inputMenuVibrate 0"
            }
        },
        "AHKGUIPAUSE": {
            "B": "gui.Destroy"
        },
        "AHKGUIPOWER": {
            "B": "gui.Destroy"
        },
        "AHKGUIPROGRAM": {
            "B": "gui.Destroy"
        },
        "AHKGUIVOLUME": {
            "B": "gui.Destroy"
        }  
    }
}