{
    "id": "xinput",
    "name": "Xbox Controller",
    "className": "XInputDevice",

    "maxConnected": 4,
    "vibration": true,

    "kbmmode": {
        "hotkeys": {
            "SELECT": "toggleKeyboard",
            "[REPEAT]B": "Send {Backspace}"
        },
        "mouse": {
            "x": "LSX", 
            "y": "-LSY", 
            "lclick": "A",
            "rclick": "X",
            "hscroll": "RSX",
            "vscroll": "-RSY"
        }
    },

    "desktopmode": {
        "hotkeys": {
            "HOME": "disableDesktopMode",
            "SELECT": "toggleKeyboard",
            "START": "Send {LWin}",

            "[REPEAT]DU": "Send {Up}",
            "[REPEAT]DD": "Send {Down}",
            "[REPEAT]DL": "Send {Left}",
            "[REPEAT]DR": "Send {Right}",

            "[REPEAT]B": "Send {Backspace}",

            "LT>0.3": "Send !{Tab}",
            "RT>0.3": "Send !+{Tab}"
        },
        "mouse": {
            "x": "LSX", 
            "y": "-LSY", 
            "lclick": "A",
            "rclick": "X",
            "hscroll": "RSX",
            "vscroll": "-RSY"
        }
    },

    "programHotkeys": {
        "HOME": {
            "down": "pausemenu",
            "time": 80
        },
        "START&SELECT": {
            "down": "program.exit",
            "time": 120
        }
    },

    "interfaceHotkeys": {
        "[REPEAT]DU|LSY>0.4": "gui.up",
        "[REPEAT]DD|LSY<-0.4": "gui.down",
        "[REPEAT]DL|LSX<-0.4": "gui.left",
        "[REPEAT]DR|LSX>0.4": "gui.right",
        "B": "gui.back",
        "A": {
            "down": "gui.select",
            "up": "gui.unselect"
        },
        "HOME": {
            "down": "pausemenu",
            "time": 80
        }
    }
}