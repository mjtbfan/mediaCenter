{
    "id": "chrome",
    "name": "Google Chrome",

    "allowQuickAccess": true,

    "dir": "C:\\Program Files\\Google\\Chrome\\Application\\",
    "exe": "chrome.exe",
    "wndw": "Google Chrome",

    "launch": "",
    "exit": "",

    "mouse": {
        "x": "LSX",
        "y": "LSY",
        "lclick": "A",
        "rclick": "X",
